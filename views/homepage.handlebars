<main>
    <p>Welcome to Super Basic Minigames - Your Ultimate Gaming Experience!</p>

    {{#if currentUser}}
        <p>Hello, {{ currentUser }}! <a href="/logout">Logout</a></p>
    {{else}}
        <form id="loginForm">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>

            <button type="button" onclick="login()">Login</button>
        </form>
    {{/if}}
    <section class="leaderboard">
        <h2>Leaderboard</h2>
        <!-- Blank leaderboard section -->
    </section>

    <section class="game-cards">
        <div class="game-card">
            <h3>Snake!</h3>
            <p>The high octane, classic game that everyone loves.</p>
            <button onclick="playGame(1)">Play</button>
        </div>

        <div class="game-card">
            <h3>Game 2?</h3>
            <p>Description of Game 2. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            <button onclick="playGame(2)">Play</button>
        </div>

        <div class="game-card">
            <h3>Game 3?</h3>
            <p>Description of Game 2. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            <button onclick="playGame(2)">Play</button>
        </div>
    </section>
</main>
